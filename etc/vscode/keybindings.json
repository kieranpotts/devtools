[
  // Open external terminal in own window (start at current working directory).
  {
    "key": "ctrl+alt+t",
    "command": "workbench.action.terminal.openNativeConsole",
    "when": "!terminalFocus"
  },

  // Open external terminal in new tab (start at current working directory).
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.terminal.newWithCwd",
    "when": "terminalProcessSupported"
  },

  // Toggle zen mode.
  {
    "key": "ctrl+alt+z",
    "command": "workbench.action.toggleZenMode"
  },

  // Toggle voice dictation. Required VS Code Speech extension.
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.chat.startVoiceChat",
    "when": "!voiceChatInProgress"
  },
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.chat.stopListeningAndSubmit",
    "when": "voiceChatInProgress"
  },

  // Remove built-in shortcuts for Ctrl+Shift+s.
  {
    "key": "ctrl+shift+s",
    "command": "-workbench.action.files.saveAs"
  },
  {
    "key": "ctrl+shift+s",
    "command": "-markdown-preview-enhanced.syncPreview",
    "when": "editorLangId == 'markdown'"
  },
  {
    "key": "ctrl+shift+s",
    "command": "-workbench.action.files.saveLocalFile",
    "when": "remoteFileDialogVisible"
  }
]
